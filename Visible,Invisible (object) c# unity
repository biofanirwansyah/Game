using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class visibleinvisible : MonoBehaviour {
    public GameObject cube;//variable untuk indikator dari objek yang diinginkan
    private void Update()
    {
        if (Input.GetKeyDown(KeyCode.A)) //menekan keyboard huruf A sebagai indikator untuk objek muncul
        {
            cube.SetActive(true); //objek dari cube akan aktif(muncul)
            Debug.Log("Aktif");
        }else if (Input.GetKeyDown(KeyCode.S)) //menekan keyboard huruf S sebagai indikator untuk objek hilang
        {
            cube.SetActive(false); //objek dari cube akan tidak aktif(hilang)
            Debug.Log("Tidak Aktif");
        }
        else
        {
            Debug.Log("NO ACTION");
        }
    }
}
